{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}
    <form method="POST">
        {% if error %}<span class="error">{{ error }}<br>{% endif %}
        <label for="donor">Donor: </label><input type="donor" id="donor" name="donor">
        <label for="amount">Amount: </label><input type="amount" id="amount" name="amount">
        <input type="submit" value="Add it!">
    </form>
{% endblock content %}
